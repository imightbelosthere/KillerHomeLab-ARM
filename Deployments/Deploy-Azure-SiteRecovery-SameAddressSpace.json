            "type": "string",
            "defaultValue": "2022-Datacenter",
            "allowedValues": [
                "2022-Datacenter",
                "2019-Datacenter",
                "2016-Datacenter",
                "2012-R2-Datacenter"
            ],
            "metadata": {
                "description": "VM1 OS Sku"
            }
        },
