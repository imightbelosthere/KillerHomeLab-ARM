                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "KeyVaultKeyAPIVersion": {
                        "value": "[variables('KeyVaultKeyAPIVersion')]"
                    },                                        
                    "KeyVaultNameHash": {
                        "value": "KeyVault2"
                    }
                }
            }
        },
        {
