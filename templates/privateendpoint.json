{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "PrivateEndpointAPIVersion": {
            "type": "string",
            "metadata": {
                "description": "Private Endpoint API Version"
            }
        },
        "ResourceName": {
            "type": "string",
            "metadata": {
                "description": "Resource Name"
            }
        },
        "ResourceProviderType": {
            "type": "string",
            "metadata": {
                "description": "Resource Provider Type"
            }
        },        
        "GroupId": {
            "type": "string",
            "metadata": {
                "description": "Target Sub Resource"
            }
        },
        "vnetName": {
            "type": "string",
            "metadata": {
                "description": "Virtual Network"
            }
        },
        "SubnetName": {
            "type": "string",
            "metadata": {
                "description": "Subnet Name"
            }
        }
    },
    "variables": {
        "subnetId": "[resourceId(resourceGroup().name, 'Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('SubnetName'))]",
        "privateLinkResource": "[resourceId(resourceGroup().name, parameters('ResourceProviderType'), parameters('ResourceName'))]",
        "PrivateEndpointName": "[concat(parameters('ResourceName'), '-', parameters('GroupId'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/privateEndpoints",
            "name": "[variables('PrivateEndpointName')]",
            "apiVersion": "[parameters('PrivateEndpointAPIVersion')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "subnet": {
                    "id": "[variables('subnetId')]"
                },
                "privateLinkServiceConnections": [
                    {
                        "name": "[variables('PrivateEndpointName')]",
                        "properties": {
                            "privateLinkServiceId": "[variables('privateLinkResource')]",
                            "groupIds": [
                                "[parameters('GroupId')]"
                            ]
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
        "PrivateEndpointName": {
            "type": "string",
            "value": "[variables('PrivateEndpointName')]"
        },
        "PrivateEndpointFQDN1": {
            "type": "string",
            "value": "[reference(resourceId(resourceGroup().name, 'Microsoft.Network/privateEndpoints', variables('PrivateEndpointName'))).CustomDnsConfigs[0].Fqdn]"
        },
        "PrivateEndpointFQDN2": {
            "type": "string",
            "value": "[reference(resourceId(resourceGroup().name, 'Microsoft.Network/privateEndpoints', variables('PrivateEndpointName'))).CustomDnsConfigs[1].Fqdn]"
        },
        "PrivateEndpointFQDN3": {
            "type": "string",
            "value": "[reference(resourceId(resourceGroup().name, 'Microsoft.Network/privateEndpoints', variables('PrivateEndpointName'))).CustomDnsConfigs[2].Fqdn]"
        },
        "PrivateEndpointFQDN4": {
            "type": "string",
            "value": "[reference(resourceId(resourceGroup().name, 'Microsoft.Network/privateEndpoints', variables('PrivateEndpointName'))).CustomDnsConfigs[3].Fqdn]"
        },
        "PrivateEndpointFQDN5": {
            "type": "string",
            "value": "[reference(resourceId(resourceGroup().name, 'Microsoft.Network/privateEndpoints', variables('PrivateEndpointName'))).CustomDnsConfigs[4].Fqdn]"
        },
        "PrivateEndpointFQDN6": {
            "type": "string",
            "value": "[reference(resourceId(resourceGroup().name, 'Microsoft.Network/privateEndpoints', variables('PrivateEndpointName'))).CustomDnsConfigs[5].Fqdn]"
        },
        "PrivateEndpointFQDN7": {
            "type": "string",
            "value": "[reference(resourceId(resourceGroup().name, 'Microsoft.Network/privateEndpoints', variables('PrivateEndpointName'))).CustomDnsConfigs[6].Fqdn]"
        },
        "PrivateEndpointFQDN8": {
            "type": "string",
            "value": "[reference(resourceId(resourceGroup().name, 'Microsoft.Network/privateEndpoints', variables('PrivateEndpointName'))).CustomDnsConfigs[7].Fqdn]"
        },
        "PrivateEndpointFQDN9": {
            "type": "string",
            "value": "[reference(resourceId(resourceGroup().name, 'Microsoft.Network/privateEndpoints', variables('PrivateEndpointName'))).CustomDnsConfigs[8].Fqdn]"
        },
        "PrivateEndpointFQDN10": {
            "type": "string",
            "value": "[reference(resourceId(resourceGroup().name, 'Microsoft.Network/privateEndpoints', variables('PrivateEndpointName'))).CustomDnsConfigs[9].Fqdn]"
        }                                                                                
    }    
}