{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "KeyVaultAPIVersion": {
            "type": "string",
            "defaultValue": "2021-11-01-preview",
            "metadata": {
                "description": "KeyVault API Version"
            }
        },
        "KeyVaultNameHash": {
            "type": "string",
            "metadata": {
                "description": "Key Vault Name Hash"
            }
        },                      
        "AzureUserObjectID": {
            "type": "string",
            "metadata": {
                "description": "Azure User Object ID"
            }
        },
        "SecretPermissions": {
            "type": "array",
            "metadata": {
                "description": "Secret Permissions"
            }
        },        
        "SkuName": {
            "type": "string",
            "metadata": {
                "description": "Azure Key Vault Sku Name"
            }
        }        
    },    
    "variables": {
        "KeyVaultHash": "[guid(resourceGroup().id, parameters('KeyVaultNameHash'))]",
        "KeyVaultIdentifier": "[substring(variables('KeyVaultHash'), 24, 9)]",
        "KeyVaultName": "[concat('kv', variables('KeyVaultIdentifier'))]",        
        "tenantID": "[subscription().tenantId]"
    },
    
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults",
            "name": "[variables('KeyVaultName')]",
            "apiVersion": "[parameters('KeyVaultAPIVersion')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "enabledForDeployment": true,
                "enabledForDiskEncryption": true,
                "enabledForTemplateDeployment": true,
                "enableSoftDelete": true,
                "enablePurgeProtection": true,
                "softDeleteRetentionInDays": 7,
                "tenantId": "[variables('tenantId')]",
                "accessPolicies": [
                    {
                        "objectId": "[parameters('AzureUserObjectID')]",
                        "tenantId": "[variables('tenantId')]",
                        "permissions": {
                            "secrets": "[parameters('secretPermissions')]"
                        }
                    }
                ],
                "sku": {
                    "name": "[parameters('SkuName')]",
                    "family": "A"
                },
                "networkAcls": {
                    "defaultAction": "Allow",
                    "bypass": "AzureServices"
                }
            }
        }
    ],
    "outputs": {
        "KeyVaultName": {
            "type": "string",
            "value": "[variables('KeyVaultName')]"
        }
    }    
}