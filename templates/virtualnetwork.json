{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "VirtualNetworkAPIVersion": {
            "type": "string",
            "metadata": {
                "description": "Virtual Network API Version"
            }
        },
        "VirtualNetworkName": {
            "type": "string",
            "metadata": {
                "description": "VirtualNetwork Name"
            }
        },
        "vnetprefix": {
            "type": "string",
            "metadata": {
                "description": "VNet prefix"
            }
        },
        "subnets": {
            "type": "array",
            "metadata": {
                "description": "Subnets Configuration Information"
            }            
        }
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[parameters('VirtualNetworkName')]",
            "apiVersion": "[parameters('VirtualNetworkAPIVersion')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetprefix')]"
                    ]
                },
                "copy": [
                    {
                        "name": "subnets",
                        "count": "[length(parameters('subnets'))]",
                        "input": {
                            "name": "[parameters('subnets')[copyIndex('subnets')].name]",
                            "properties": {
                                "addressprefix": "[parameters('subnets')[copyIndex('subnets')].addressPrefix]",
                                "delegations": "[parameters('subnets')[copyIndex('subnets')].delegations]"
                            }                            
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
        "VirtualNetworkSubnetNames": {
            "type": "array",
            "copy": {
                "count": "[length(parameters('subnets'))]",
                "input": "[reference(copyIndex(), parameters('subnets')).name]"
            }
        }        
    }
}