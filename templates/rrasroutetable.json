{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "RouteTableAPIVersion": {
            "type": "string",
            "metadata": {
                "description": "Route Table API Version"
            }
        },        
        "Name": {
            "type": "string",
            "metadata": {
                "description": "VPN Gateway Name"
              }
        },
        "RouteName": {
            "type": "string",
            "metadata": {
                "description": "Route Name"
            }
        },        
        "SitePrefix": {
            "type": "string",
            "metadata": {
                "description": "Site Prefix"
            }
        },
        "RemoteGatewayIP": {
            "type": "string",
            "metadata": {
                "description": "Remote VPN Gateway IP"
            }
        }       
    },   
    "resources": [
        {
            "type": "Microsoft.Network/routeTables",
            "apiVersion": "[parameters('RouteTableAPIVersion')]",
            "name": "[parameters('Name')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "disableBgpRoutePropagation": false,
                "routes": [
                    {
                        "name": "[parameters('RouteName')]",
                        "properties": {
                            "addressPrefix": "[parameters('SitePrefix')]",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[parameters('RemoteGatewayIP')]",
                            "hasBgpOverride": false
                        }
                    }
                ]
            }
        }
    ]
}