{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "KeyVaultAPIVersion": {
            "type": "string",
            "metadata": {
                "description": "KeyVault API Version"
            }
        },
        "WebAppAPIVersion": {
            "type": "string",
            "metadata": {
                "description": "Web App API Version"
            }
        },        
        "KeyVaultName": {
            "type": "string",
            "metadata": {
                "description": "Key Vault Name"
            }            
        },
        "SecretPermissions": {
            "type": "array",
            "metadata": {
                "description": "Secret Permissions"
            }
        },         
        "ResourceName": {
            "type": "string",
            "metadata": {
                "description": "Resource Name"
            }            
        },
        "ResourceType": {
            "type": "string",
            "metadata": {
                "description": "Resource Type"
            }            
        }                        
    },    
    "variables": {
        "tenantID": "[subscription().tenantId]"
    },
    
    "resources": [
        {
            "condition": "[equals(parameters('ResourceType'),'WebApp')]",                                                
            "apiVersion": "[parameters('KeyVaultAPIVersion')]",
            "name": "[format('{0}/{1}', parameters('KeyVaultName'), 'add')]",
            "type": "Microsoft.KeyVault/vaults/accessPolicies",
            "dependsOn": [
                "[concat('Microsoft.Web/sites/', parameters('ResourceName'))]"
            ],            
            "properties": {
                "accessPolicies": [
                    {
                        "objectId": "[reference(resourceId('Microsoft.Web/sites', parameters('ResourceName')), parameters('WebAppAPIVersion'), 'full').identity.principalId]",
                        "tenantId": "[variables('tenantId')]",
                        "permissions": {
                            "secrets": "[parameters('SecretPermissions')]"
                        }
                    }
                ]
            }
        }
    ]    
}