{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {        
        "WebAppAPIVersion": {
            "type": "string",
            "metadata": {
                "description": "Web App API Version"
            }
        },
        "StorageAccountAPIVersion": {
            "type": "string",
            "metadata": {
                "description": "Storage Account API Version"
            }
        },        
        "KeyVaultAPIVersion": {
            "type": "string",
            "defaultValue": "2021-11-01-preview",
            "metadata": {
                "description": "KeyVault API Version"
            }
        },
        "KeyVaultSecretAPIVersion": {
            "type": "string",
            "metadata": {
                "description": "KeyVault Secret API Version"
            }			
        },        
        "WebAppName": {
            "type": "string",
            "metadata": {
                "description": "Web App Name"
            }
        },
        "ServerFarmName": {
            "type": "string",
            "metadata": {
                "description": "Service Plan Name"
            }
        },
        "StorageAccountNameHash": {
            "type": "string",
            "metadata": {
                "description": "Storage Account Name Hash"
            }
        },
        "KeyVaultNameHash": {
            "type": "string",
            "metadata": {
                "description": "Key Vault Name Hash"
            }
        },
        "AzureUserObjectID": {
            "type": "string",
            "metadata": {
                "description": "Azure User Object ID"
            }
        },
        "MessageTraceAccountUPN": {
            "type": "string",
            "metadata": {
                "description": "The UPN of the Message Trace Account"
            }
        },                                 
        "MessageTraceAccountPassword": {
            "type": "securestring",
            "metadata": {
                "description": "The password used for the Message Trace Account"
            }
        }        
    },
    "variables": {
        "StorageAccountHash": "[guid(resourceGroup().id, parameters('StorageAccountNameHash'))]",
        "StorageIdentifier": "[substring(variables('StorageAccountHash'), 24, 9)]",
        "StorageAccountName": "[concat('sa', variables('StorageIdentifier'))]",
        "KeyVaultHash": "[guid(resourceGroup().id, parameters('KeyVaultNameHash'))]",
        "KeyVaultIdentifier": "[substring(variables('KeyVaultHash'), 24, 9)]",
        "KeyVaultName": "[concat('sa', variables('KeyVaultIdentifier'))]",
        "secretsPermissions": [
            "Get",
            "List",
            "Set"
        ],
        "tenantID": "[subscription().tenantId]",
        "skuName": "standard"        
    },    
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults",
            "name": "[variables('KeyVaultName')]",
            "apiVersion": "[parameters('KeyVaultAPIVersion')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "enabledForDeployment": true,
                "enabledForDiskEncryption": true,
                "enabledForTemplateDeployment": true,
                "enableSoftDelete": true,
                "enablePurgeProtection": true,
                "softDeleteRetentionInDays": 7,
                "tenantId": "[variables('tenantId')]",
                "accessPolicies": [
                    {
                        "objectId": "[parameters('AzureUserObjectID')]",
                        "tenantId": "[variables('tenantId')]",
                        "permissions": {
                            "secrets": "[variables('secretsPermissions')]"
                        }
                    }
                ],
                "sku": {
                    "name": "[variables('skuName')]",
                    "family": "A"
                },
                "networkAcls": {
                    "defaultAction": "Allow",
                    "bypass": "AzureServices"
                }
            }
        },
        {
            "apiVersion": "[parameters('StorageAccountAPIVersion')]",
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('storageAccountName')]",
            "location": "[resourceGroup().location]",
            "tags": {},
            "sku": {
                "name": "Standard_LRS"
            },
            "kind": "StorageV2",
            "properties": {
                "supportsHttpsTrafficOnly": true,
                "minimumTlsVersion": "TLS1_2"
            }
        },
        {
            "apiVersion": "[parameters('WebAppAPIVersion')]",
            "name": "[parameters('WebAppName')]",
            "type": "Microsoft.Web/sites",
            "kind": "functionapp,workflowapp",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Storage/storageAccounts/', variables('storageAccountName'))]",
                "[concat('Microsoft.KeyVault/vaults/', variables('KeyVaultName'))]"
            ],
            "properties": {
                "name": "[parameters('WebAppName')]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~4"
                        },
                        {
                            "name": "FUNCTIONS_WORKER_RUNTIME",
                            "value": "node"
                        },
                        {
                            "name": "keyVault_VaultUri",
                            "value": "[reference(resourceId('Microsoft.KeyVault/vaults', variables('KeyVaultName')), parameters('KeyVaultAPIVersion'), 'full').properties.vaultUri]"
                        },                        
                        {
                            "name": "WEBSITE_NODE_DEFAULT_VERSION",
                            "value": "~14"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('storageAccountName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2019-06-01').keys[0].value,';EndpointSuffix=', environment().suffixes.storage)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('storageAccountName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2019-06-01').keys[0].value,';EndpointSuffix=', environment().suffixes.storage)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTSHARE",
                            "value": "[concat(toLower(parameters('WebAppName')), '8024')]"
                        },
                        {
                            "name": "AzureFunctionsJobHost__extensionBundle__id",
                            "value": "Microsoft.Azure.Functions.ExtensionBundle.Workflows"
                        },
                        {
                            "name": "AzureFunctionsJobHost__extensionBundle__version",
                            "value": "[1.*, 2.0.0)"
                        },
                        {
                            "name": "APP_KIND",
                            "value": "workflowApp"
                        }
                    ],
                    "use32BitWorkerProcess": false,
                    "ftpsState": "FtpsOnly",
                    "netFrameworkVersion": "v6.0"
                },
                "serverFarmId": "[concat('/subscriptions/', subscription().id,'/resourcegroups/', resourceGroup().name, '/providers/Microsoft.Web/serverfarms/', parameters('ServerFarmName'))]",
                "clientAffinityEnabled": false,
                "virtualNetworkSubnetId": null,
                "httpsOnly": true,
                "publicNetworkAccess": "Enabled"
            },
            "identity": {
                "type": "SystemAssigned"
            }
        },
        {
            "type": "Microsoft.Web/sites/sourcecontrols",
            "apiVersion": "[parameters('WebAppAPIVersion')]",
            "name": "[format('{0}/{1}', parameters('webAppName'), 'web')]",
            "properties": {
                "repoUrl": "https://github.com/elliottfieldsjr/LogicApp.git",
                "branch": "main",
                "isManualIntegration": true
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('webAppName'))]"
            ]
        },
        {
            "apiVersion": "[parameters('KeyVaultAPIVersion')]",
            "name": "[format('{0}/{1}', variables('KeyVaultName'), 'add')]",
            "type": "Microsoft.KeyVault/vaults/accessPolicies",
            "dependsOn": [
                "[concat('Microsoft.Web/sites/', parameters('WebAppName'))]"
            ],            
            "properties": {
                "accessPolicies": [
                    {
                        "objectId": "[reference(resourceId('Microsoft.Web/sites', parameters('WebAppName')), parameters('WebAppAPIVersion'), 'full').identity.principalId]",
                        "tenantId": "[variables('tenantId')]",
                        "permissions": {
                            "secrets": "[variables('secretsPermissions')]"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "apiVersion": "[parameters('KeyVaultSecretAPIVersion')]",
            "name": "[format('{0}/{1}', variables('KeyVaultName'), 'Message-Trace-Account-UPN')]",
            "dependsOn": [
                "[concat('Microsoft.KeyVault/vaults/', variables('KeyVaultName'))]"
            ],            
            "properties": {
                "value": "[parameters('MessageTraceAccountUPN')]"
            }
        },    
        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "apiVersion": "[parameters('KeyVaultSecretAPIVersion')]",
            "name": "[format('{0}/{1}', variables('KeyVaultName'), 'Message-Trace-Account-Password')]",
            "dependsOn": [
                "[concat('Microsoft.KeyVault/vaults/', variables('KeyVaultName'))]"
            ],            
            "properties": {
                "value": "[parameters('MessageTraceAccountPassword')]"
            }
        }                
    ]
}