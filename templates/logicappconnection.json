{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "WebAppConnectionAPIVersion": {
            "type": "string",
            "metadata": {
                "description": "Web App API Version"
            }
        },
        "ResourceName": {
            "type": "string",
            "metadata": {
                "description": "Name of Resource"
            }
        },
        "ManagedAPIType": {
            "type": "string",
            "metadata": {
                "description": "Managed API Type"
            }
        },
        "nonSecretParameterValues": {
            "type": "object",
            "metadata": {
                "description": "Parameters for Connection"
            }
        }                              
    },
    "variables": {
        "ConnectionName": "[concat('Connection-to-', parameters('ResourceName'))]"
    },    
    "resources": [
        {
            "type": "Microsoft.Web/connections",
            "apiVersion": "[parameters('WebAppConnectionAPIVersion')]",
            "location": "[resourceGroup().location]",
            "name": "[parameters('ResourceName')]",
            "kind": "V2",
            "properties": {
                "displayName": "[variables('ConnectionName')]",
                "api": {
                    "name": "[parameters('ManagedAPIType')]",
                    "id": "[subscriptionResourceId('Microsoft.Web/locations/managedApis', resourceGroup().location, parameters('ManagedAPIType'))]",
                    "type": "Microsoft.Web/locations/managedApis"              
                },
                "nonSecretParameterValues": "[parameters('nonSecretParameterValues')]"
            }
        }
    ]
}